<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            android:onClick="selectImageProfileUser"
            android:src="@drawable/image_doctor"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/nameusers"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="126dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="ندى الكحلوت "
            android:textAlignment="center"
            android:textColor="#2ca6ff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameusers"
            android:layout_centerHorizontal="true"
            android:padding="8dp">

            <Button
                android:id="@+id/okay_text"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/shapebutton"
                android:text="قم بارسال طلب الصداقة"
                android:textColor="#F2F4FB"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!--  <Button
                  android:id="@+id/decline_message_request_button"
                  android:layout_width="200dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:layout_marginStart="180dp"
                  android:text="  Cancel Chat Request  "
                  android:textAllCaps="false"
                  android:textColor="@android:color/holo_orange_dark"
                  android:textSize="20dp"
                  android:textStyle="bold"
                  android:visibility="invisible" />-->

            <Button
                android:id="@+id/cancel_text"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:background="@drawable/shapebutton"
                android:padding="8dp"
                android:text="الغاء الامر"
                android:textColor="#F1E9E9"
                android:textSize="15sp"
                android:layout_marginStart="180dp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>